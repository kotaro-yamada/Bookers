<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse clearfix">
      <div class="container">
        <div class="row">
      <nav class="nav navbar-nav navbar-left"  >
        <span>Bookers</span>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
            <%= link_to 'Home', user_path(current_user.id), class: "glyphicon glyphicon-home"  %>
            
          </li>
          <li>
            <%= link_to 'Users', users_path, class: "glyphicon glyphicon-user" %>
          </li>
          <li>
            <%= link_to 'Books', books_path, class: "glyphicon glyphicon-book" %>
          </li>
          <li>
            <%= link_to 'logout', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
          </li>
          <% else %>
            <li>
            <%= link_to 'Home', "/", class: "glyphicon glyphicon-home" %>
          </li>
          <li>
            <%= link_to 'About', about_path, class: "glyphicon glyphicon-link" %>
          </li>
          <li>
            <%= link_to 'sign up', new_user_registration_path, class: "glyphicon glyphicon-edit" %>
          </li>
          <li>
            <%= link_to 'login', new_user_session_path, class: "glyphicon glyphicon-log-in" %>
          </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
  </header>

    <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
    <%= yield %>
  </body>

  <footer>
    <div class="container">
      <div class="row">
        <div class="col-xs-3 col-xs-offset-9">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
</html>
