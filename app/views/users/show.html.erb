
<%= render 'users/list', user: @user, book:@book%>

<div class="Books-table col-xs-9">
	<h1>Books</h1>
    <table class="table-hover table table-sm">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Body</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
          <td><%= link_to"#{book.title}", book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </table>
</div>

</div>
</div>


