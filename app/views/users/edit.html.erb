<div class="container">
<%= render 'searches/search_form'%>

<h2>User info</h2>

<% if @user.errors.any? %>
 <p> error prohibited this book from being saved:</p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for(@user) do |f| %>
    <label>Name</label>
    <%= f.text_field :name, autofocus: true %>
    <div class="field">
    	<label>Image</label>
        <%= f.attachment_field :profile_image %>
    </div>
    <div class="field">
    	<label>Introduction</label>
    <%= f.text_field :introduction, autofocus: true %>
    </div>
    <div class="action">            
    <%= f.submit "Update User" %>
    </div>
    
<% end %>

</div>