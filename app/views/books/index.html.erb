
<%= render 'users/list', user: @user, book:@book %>

<div class="Books col-xs-9">
  <h1>Books</h1>
  <table class="table-hover table table-sm">
    <tr>
      <th class="col-xs-3 col-ms-3 col-md-4 col-lg-4"></th>
      <th class="col-xs-3 col-ms-3 col-md-4 col-lg-4">Title</th>
      <th class="col-xs-3 col-ms-3 col-md-4 col-lg-4">Opinion</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= link_to"#{book.title}", book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
  </table>
</div>


</div>
</div>
