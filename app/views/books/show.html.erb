
  
	<%= render 'users/list', user: @user, book:@bk %>

<div class="col-xs-9">
  <%= render 'searches/search_form'%>

	<h2>Book detail</h2>
	<table class="table table-sm">
        <tr>
          <td>
            
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %><br>
            <%= @user.name %>
            <% end %>
          </td>
            
          <td><%= link_to"#{@book.title}", book_path(@book.id) %></td>

          <td><%= @book.body %></td>

          <% if @book.favorited_by?(current_user) %>
          <td><%= link_to book_favorites_path(@book),method: :delete do %>
              <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
              <%= @book.favorites.count %>
              <% end %>
          </td>
          <% else %>
          <td><%= link_to book_favorites_path(@book),method: :post do %>
              <i class="glyphicon glyphicon-heart-empty"></i>
              <%= @book.favorites.count %>
              <% end %>           
          </td>
          <% end %>

          <td><p>コメント数：</p><%= @book.post_comments.count %></td>

          <% if @book.user_id == current_user.id %>
            <td><%= link_to"Edit", edit_book_path(@book.id), class: 'btn btn-success' %></td>
            <td><%= link_to"Destroy", book_path(@book.id), method: :delete, class: 'btn btn-danger' %></td>
          <% end %>


        </tr>
	</table>

  <% @post_comments.each do |post_comment| %>
  <table>
    <tr>
      <td><%= link_to user_path(post_comment) do %>
            <%= attachment_image_tag post_comment.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %><br>
          <% end %>
      </td>
      <td><%= post_comment.comment %></td>
      <% if post_comment.user_id == current_user.id %>
      <td><%= link_to"Destroy", book_post_comment_path(@book, post_comment), method: :delete, class: 'btn btn-danger' %></td>
      <% end %>
    </tr>
  </table>
  <% end %>
  
  <div>
  <%= form_for [@book, @post_comment] do |f| %>
    <%= f.text_area :comment, class: "form-control" %>
    <%= f.submit "送信" %>
  <% end %>
  </div>

</div>

</div>
</div>


