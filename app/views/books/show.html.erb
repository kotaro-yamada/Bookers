
  
	<%= render 'users/list', user: @user, book:@bk %>

<div class="col-xs-9">
	<h2>Book detail</h2>
	<table class="table table-sm">
        <tr>
          <td>
            
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle profile-img", fallback: "no_image.jpg" %><br>
            <%= @user.name %>
            <% end %>
            </td>
            
          <td><%= link_to"#{@book.title}", book_path(@book.id) %></td>
          <td><%= @book.body %></td>

          <% if @book.user_id == current_user.id %>
            <td class="col-xs-3 col-ms-3 col-md-4 col-lg-2"><%= link_to"Edit", edit_book_path(@book.id), class: 'btn btn-success' %></td>
            <td class="col-xs-3 col-ms-3 col-md-4 col-lg-1"><%= link_to"Destroy", book_path(@book.id), method: :delete, class: 'btn btn-danger' %></td>
          <% end %>

        </tr>
	</table>
</div>

</div>
</div>


