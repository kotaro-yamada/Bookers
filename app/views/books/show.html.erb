
	<%= render 'users/list', user: @user, book:@bk %>

<div class="col-xs-9">
	<h1>Book detail</h1>
	<table class="table table-sm">
        <tr>
          <td class="col-xs-3 col-ms-3 col-md-4 col-lg-3">
            
            <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
            <div class="p_name"><%= @user.name %></div>
            <% end %>
            
          <td class="col-xs-3 col-ms-3 col-md-4 col-lg-3"><%= link_to"#{@book.title}", book_path(@book.id) %></td>
          <td class="col-xs-3 col-ms-3 col-md-4 col-lg-3"><%= @book.title %></td>

          <% if @book.user_id == current_user.id %>
            <td class="col-xs-3 col-ms-3 col-md-4 col-lg-2"><%= link_to"Edit", edit_book_path(@book.id), class: 'btn btn-success' %></td>
            <td class="col-xs-3 col-ms-3 col-md-4 col-lg-1"><%= link_to"Destroy", book_path(@book.id), method: :delete, class: 'btn btn-danger' %></td>
          <% end %>

        </tr>
	</table>
</div>

</div>
</div>


